<% if @category.present? && @search_term.blank? %>
   <% @page_title = "#{(@category.split /(?=[A-Z][a-z])/).join(" ")} #{_('category')}" %>
<% elsif @search_term.blank? %>
   <% @page_title = _('Search') -%>
<% else %>
   <% @page_title = "#{_("Searching for")} #{@search_term} " -%>
<% end %>

<% unless @packagenames.nil? %>
  <%= render :partial => 'search/find_results' %>
<% end %>
